<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_horizontal" android:layout_gravity="right" android:orientation="vertical" android:id="@+id/bottom_sheet_layout" android:background="@drawable/bottom_sheet_bg" android:padding="8dp" android:layout_width="200dp" android:layout_height="wrap_content" app:behavior_hideable="true" app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <LinearLayout android:orientation="vertical" android:id="@+id/gesture_layout" android:paddingTop="10dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:layout_gravity="center" android:id="@+id/bottom_sheet_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icn_chevron_up"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textColor="@android:color/black" android:id="@+id/frame" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Total Shots"/>
        <TextView android:textColor="@android:color/black" android:gravity="right" android:id="@+id/frame_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="-"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textColor="@android:color/black" android:id="@+id/crop" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="TotalMakes"/>
        <TextView android:textColor="@android:color/black" android:gravity="right" android:id="@+id/crop_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="-"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textColor="@android:color/black" android:id="@+id/inference" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Total %"/>
        <TextView android:textColor="@android:color/black" android:gravity="right" android:id="@+id/inference_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="-"/>
    </LinearLayout>
    <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp"/>
    <LinearLayout android:orientation="horizontal" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textColor="@android:color/black" android:id="@+id/api" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="API"/>
        <androidx.appcompat.widget.SwitchCompat android:textColor="@android:color/black" android:gravity="right" android:id="@+id/api_info_switch" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:checked="false" android:text="TFLITE"/>
    </LinearLayout>
</LinearLayout>
